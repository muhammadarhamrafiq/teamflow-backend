generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

enum TaskStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  IN_REVIEW
  BLOCKED
  DONE
  CANCELLED
}

model User {
  id             String @id @default(uuid())
  name           String
  email          String
  password       String
  role           Role   @default(MEMBER)
  organizationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization  @relation("org_members", fields: [organizationId], references: [id])
  OwnerOf      Organization? @relation("organization_owner_relation")
  tasks        Task[]
  comments     Comment[]

  @@unique([email, organizationId])
}

model Organization {
  id      String  @id @default(uuid())
  name    String
  slug    String  @unique
  logoUrl String?
  ownerId String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]    @relation("org_members")
  owner    User      @relation("organization_owner_relation", fields: [ownerId], references: [id])
  projects Project[]
}

model Project {
  id             String        @id @default(uuid())
  name           String
  slug           String
  description    String?
  projectStatus  ProjectStatus @default(PLANNING)
  dueDate        DateTime?
  organizationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id])
  tasks        Task[]

  @@unique([organizationId, slug])
}

model Task {
  id          String     @id @default(uuid())
  name        String
  description String?
  startDate   DateTime?
  dueDate     DateTime?
  taskStatus  TaskStatus @default(BACKLOG)
  assigneeId  String
  projectId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignee User      @relation(fields: [assigneeId], references: [id])
  project  Project   @relation(fields: [projectId], references: [id])
  comments Comment[]
}

model Comment {
  id       String @id @default(uuid())
  message  String
  taskId   String
  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task   Task @relation(fields: [taskId], references: [id])
  author User @relation(fields: [authorId], references: [id])
}
